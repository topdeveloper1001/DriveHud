        </VisualBrush.Visual>
    </VisualBrush>

    <VisualBrush
        x:Key="HudPlayerBrush">
        <VisualBrush.Visual>
            <Border
                Height="45"
                Width="110"
                x:Name="Rounded_Rectangle_1"
                CornerRadius="1"
                Grid.RowSpan="2"
                BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Color="Black"
                        Direction="-90"
                        Opacity="0.34"
                        ShadowDepth="2" />
                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush
                        StartPoint="0.5,0"
                        EndPoint="0.5,1">
                        <GradientStop
                            Color="#dddee0"
                            Offset="0" />
                        <GradientStop
                            Color="#939597"
                            Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <Rectangle
                        x:Name="Layer_3"
                        Height="1"
                        Fill="#949698"
                        Grid.Row="0"
                        VerticalAlignment="Bottom" />
                    <Rectangle
                        x:Name="Layer_4"
                        Height="1"
                        Fill="#d1d1d2"
                        Grid.Row="1"
                        VerticalAlignment="Top" />
                </Grid>
            </Border>
        </VisualBrush.Visual>
    </VisualBrush>

    <VisualBrush
        x:Key="HudPlayerBrushDisabled">
        <VisualBrush.Visual>
            <Grid
                Height="45"
                Width="110">
                <Rectangle
                    Stroke="#FF222527"
                    RadiusX="1"
                    RadiusY="1">
                    <Rectangle.Effect>
                        <DropShadowEffect
                            Direction="280"
                            ShadowDepth="4"
                            BlurRadius="6"
                            Opacity="0.8" />
                    </Rectangle.Effect>
                    <Rectangle.Fill>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <GradientStop
                                Color="#FF8A8A8A"
                                Offset="0" />
                            <GradientStop
                                Color="#FFBCBCBC"
                                Offset="1" />
                            <GradientStop
                                Color="#FFA3A3A3"
                                Offset="0.5" />
                            <GradientStop
                                Color="#FF888888"
                                Offset="0.5" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Border
                    BorderBrush="#FF222527"
                    BorderThickness="3,0"
                    Opacity="0.22"
                    Height="2"
                    VerticalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <GradientStop
                                Color="#B2FFFFFF"
                                Offset="0.5" />
                            <GradientStop
                                Color="#43000000"
                                Offset="0.5" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
        </VisualBrush.Visual>
    </VisualBrush>

    <VisualBrush
        x:Key="HudElementPlayerBrush">
        <VisualBrush.Visual>
            <Border
                CornerRadius="3"
                Height="35"
                Width="110">
                <Border.Background>
                    <SolidColorBrush
                        Color="Black"
                        Opacity="0.65" />
                </Border.Background>
                <Path
                    x:Name="Rectangle_1"
                    Data="F1M2,0C2,0 72,0 72,0 72,6 72,47 72,47 72,47 30,47 30,47 30,47 0,0 0,0z"
                    HorizontalAlignment="Right"
                    Fill="White"
                    Opacity="0.129"
                    Width="68"
                    Stretch="Fill" />
            </Border>
        </VisualBrush.Visual>
    </VisualBrush>

