<Window x:Class="DriveHUD.Application.Views.HudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:DriveHUD.Application.Controls"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        ResizeMode="NoResize"
        WindowStyle="None"        
        ShowInTaskbar="False" 
        AllowsTransparency="True"
        Background="Transparent" 
        HorizontalAlignment="Center">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/DriveHUD.Common.Resources;component/images/logo32x32.png" Stretch="Uniform" Width="35" Height="35">
            <telerik:RadContextMenu.ContextMenu>
                <telerik:RadContextMenu>
                    <telerik:RadMenuItem Header="{ResX Main_ContextMenu_TagLastHand}">
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandTag_ForReview}"/>
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandTag_Bluff}"/>
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandTag_HeroCall}"/>
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandTag_BigFold}"/>
                    </telerik:RadMenuItem>
                    <telerik:RadMenuItem Header="{ResX Main_ContextMenu_ExportLastHand}">
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandExport_TwoPlusTwo}"/>
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandExport_CardsChat}"/>
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandExport_PokerStrategy}"/>
                        <telerik:RadMenuItem Header="{ResX Key=Enum_HandExport_RawHandHistory}"/>
                    </telerik:RadMenuItem>
                    <telerik:RadMenuItem Header="{ResX Main_ContextMenu_ReplayLastHand}" Click="ReplayLastHand_Click" />
                    <telerik:RadMenuItem Header="{ResX Main_ContextMenu_SaveHudPosition}" />
                    <telerik:RadMenuItem x:Name="rmiLoadHud" Header="{ResX Main_ContextMenu_LoadHud}" />
                </telerik:RadContextMenu>
            </telerik:RadContextMenu.ContextMenu>
        </Image>
        <Border Grid.Row="1" BorderThickness="0">
            <ctrl:DragCanvas x:Name="dgCanvas" AllowDragging="True" AllowDragOutOfView="True" AllowDrop="False"  />
        </Border>
    </Grid>
</Window>