            <Style
                x:Key="PlayerNotePathStyle"
                TargetType="Path">
                <Setter
                    Property="Data"
                    Value="{StaticResource PlayerNoteIconPath}" />
            </Style>

            <SolidColorBrush
                x:Key="BorderBrush"
                Color="#33519b" />

            <Style
                x:Key="BaseBorderStyle"
                TargetType="{x:Type Border}">
                <Setter
                    Property="BorderBrush"
                    Value="{StaticResource BorderBrush}" />
                <Setter
                    Property="HorizontalAlignment"
                    Value="Stretch" />
            </Style>

