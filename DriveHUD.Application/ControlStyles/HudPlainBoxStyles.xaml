                </DrawingImage>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate
        x:Key="StatTemplate">

        <TextBlock
            TextWrapping="Wrap"
            Foreground="{Binding CurrentColor, Converter={dh:ColorToSolidBrushConverter}}"
            FontFamily="{Binding SettingsAppearanceFontFamily}"
            FontSize="{Binding SettingsAppearanceFontSize}"
            FontWeight="{Binding SettingsAppearanceFontBold}"
            FontStyle="{Binding SettingsAppearanceFontItalic}"
            TextDecorations="{Binding SettingsAppearanceFontUnderline}"
            VerticalAlignment="Bottom">           
            <Run
                Text="{Binding Label}" />
            <Run
                Text="{Binding Caption}" />
        </TextBlock>

    </DataTemplate>

    <DataTemplate
        x:Key="StatDesignTemplate">

        <TextBlock
            TextWrapping="Wrap"
            FontFamily="{Binding SettingsAppearanceFontFamily}"
            FontSize="{Binding SettingsAppearanceFontSize}"
            FontWeight="{Binding SettingsAppearanceFontBold}"
            FontStyle="{Binding SettingsAppearanceFontItalic}"
            VerticalAlignment="Bottom">         
            <Hyperlink
                Command="{Binding DataContext.StatClickCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=2}}"
                CommandParameter="{Binding}"
                Foreground="{Binding CurrentColor, Converter={dh:ColorToSolidBrushConverter}, Mode=OneWay}"
                TextDecorations="{Binding SettingsAppearanceFontUnderline}">                        
                <Run
                    Text="{Binding Label}" />
                <Run
                    Text="{Binding Caption}" />
            </Hyperlink>
        </TextBlock>

    </DataTemplate>

</ResourceDictionary>