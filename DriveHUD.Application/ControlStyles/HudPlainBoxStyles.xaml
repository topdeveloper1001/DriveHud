<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dh="http://www.acepokersolutions.com/winfx/2015/xaml/presentation"
    xmlns:local="clr-namespace:DriveHUD.Application.ControlStyles">

    <SolidColorBrush
        x:Key="BorderBrush"
        Color="#33519b" />

    <SolidColorBrush
        x:Key="CloseButtonBackground"
        x:Shared="False"
        Color="#191a1e" />

    <Style
        x:Key="BaseBorderStyle"
        TargetType="{x:Type Border}">
        <Setter
            Property="BorderBrush"
            Value="{StaticResource BorderBrush}" />
        <Setter
            Property="HorizontalAlignment"
            Value="Stretch" />
    </Style>

    <Style
        x:Key="BottomBorderStyle"
        TargetType="{x:Type Border}"
        BasedOn="{StaticResource BaseBorderStyle}">
        <Setter
            Property="BorderThickness"
            Value="0,0,0,0" />
        <Setter
            Property="CornerRadius"
            Value="0,0,2,2" />
        <Setter
            Property="Background"
            Value="{StaticResource HudElementPlayerBrush}" />
    </Style>

    <Style
        x:Key="DefaultImageStyle"
        TargetType="{x:Type Image}">
        <Setter
            Property="Source">
            <Setter.Value>
                <DrawingImage>
                    <DrawingImage.Drawing>
                        <DrawingGroup>
