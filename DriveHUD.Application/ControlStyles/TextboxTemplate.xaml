<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        TargetType="TextBox">
        <Setter
            Property="Background"
            Value="Transparent"></Setter>
        <Setter
            Property="Foreground"
            Value="White"></Setter>
        <Setter
            Property="CaretBrush">
            <Setter.Value>
                <SolidColorBrush
                    Color="White" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>