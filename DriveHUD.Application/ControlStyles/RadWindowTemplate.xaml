    <ContentControl
        x:Key="NotificationWindowContentTemplate">
        <Grid
            Margin="10,25,10,10">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                TextWrapping="Wrap"
                Style="{StaticResource Title_H1}">
                <Run
                    Text="{Binding Path=Content}" />
                <Hyperlink
                    Command="{Binding OpenHyperLinkCommand}"
                    IsEnabled="{Binding Path=IsHyperLinkPresent}">
                    <Run
                        Text="{Binding Path=HyperLinkText}" />
                </Hyperlink>
            </TextBlock>
            <Button
                Grid.Row="1"
                Content="{ResX Common_OK}"
                Command="{Binding CloseCommand}"
                Margin="0 0 15 0"
                Width="80"
                Height="30"
                HorizontalAlignment="Right">
            </Button>
        </Grid>
