            Property="Foreground"
            Value="{StaticResource ForegroundBrush}" />
        <Setter
            Property="Background"
            Value="{StaticResource BackgroundBrush1}" />
        <Setter
            Property="Height"
            Value="200" />
        <Setter
            Property="Width"
            Value="450" />
        <Setter
            Property="ResizeMode"
            Value="NoResize" />
