<UserControl
    x:Class="DriveHUD.Application.Controls.HudPlainBoxDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dh="http://www.acepokersolutions.com/winfx/2015/xaml/presentation"
    xmlns:hud="clr-namespace:DriveHUD.Application.ViewModels.Hud"
    xmlns:vm="clr-namespace:DriveHUD.Application.ViewModels"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:control="clr-namespace:DriveHUD.Application.Controls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    MinWidth="50"
    Width="{Binding Width}"
    Height="{Binding Height}"
    Opacity="{Binding Opacity}">

    <UserControl.Resources>
        <ResourceDictionary
            Source="pack://application:,,,/DriveHUD.Application;component/ControlStyles/HudPlainBoxStyles.xaml" />
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border
            Grid.Column="0"
            Grid.Row="1"
            Style="{StaticResource BottomBorderStyle}">
            <Grid>
                <WrapPanel
                    Margin="3,0,0,3"
                    MinHeight="{x:Static hud:HudDefaultSettings.PlainStatBoxMinHeight}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <i:Interaction.Behaviors>
                        <hud:HudStatsDesignerBehavior
                            StatInfoSource="{Binding Stats}"
                            DragDropCommand="{Binding DataContext.AddToolCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, AncestorLevel=2}}"
                            HudElementViewModel="{Binding Parent}"
                            IsDefaultImage="{Binding Parent.IsDefaultImage}"
                            DefaultImageStyle="{StaticResource DefaultImageStyle}"
                            PlayerIconSource="{Binding Parent.PlayerIcon, Converter={dh:StringToImageSourceConverter}}"
                            Separator=" | " />
                    </i:Interaction.Behaviors>
                </WrapPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>